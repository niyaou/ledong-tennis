/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}



.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 40rpx;
}


.iconsize {
  width: 80rpx;
  height: 80rpx
}



.card {
  padding: 0 10px;
  vertical-align: middle;
  text-align: center;
  background: -webkit-gradient(linear, 0% 80%, 70% 90%, from(#1cdb25), to(rgb(11, 172, 131)));
  color: var(--weui-FG-1);
}
.splash{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
}

.statistics_card {
  height: 6em
}


.tags{
  font-size:0.3rem;
  padding:4rpx;
  color:rgb(233, 231, 231);
  margin-right: 0.5rem;
  border-color: rgb(233, 231, 231);
  border-width: 2rpx;
  border-style: solid;
  border-radius: 10rpx;
}


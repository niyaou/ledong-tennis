  justify-content: center; */
}

.option{
 height:800rpx;
 width:100%;
 margin-top:80rpx;
}
.column{
  width:80%;
  display: flex;
  flex-direction: row;
}



/* component/playitem/playitem.wxss */
.rowdiv1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
 height:310rpx;
 min-height: 310rpx;
 margin: 20rpx;
}

.item{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 100%;
  width: 90%;
  background-color:#fff
}

.title{
 background-color:#f3f3f3;
 width:95%;
 padding-left: 5%;
 color: rgb(153, 153, 153);
}

.nickname{
  width:160rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
}
.user{
  width:100%;
  height:90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.divid{
  width:100%;
  height:4rpx;
  background-color: rgb(211, 211, 211);
}
.avator{
  width:40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.namecontent{
  display: flex;
  flex-direction: row;
}
.userinfo-avatar {
  width: 98rpx;
  height: 98rpx;
  margin: 6rpx;
  border-radius: 50%;
}

.dividv{
  width:2rpx;
  height:60rpx;
  background-color: rgb(202, 202, 202);
}
.rank{
 background:#0a90dd;padding-left: 10rpx;padding-right: 10rpx;
 font-size: 24rpx;
 color: #fff;
}

.bottom{
  height:40%;width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.bottomimg{
  width: 48rpx;
  height: 48rpx;
  margin: 6rpx;
}
.zone{
  width:45%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color:rgb(117, 117, 117);
}

.score{
  display: flex;
  width:8%;
  font-size: 48rpx;
  font-weight: bolder;
  align-items: center;
  align-content: center;
  justify-content: center;
}
.win{
  color:#333333;
}
.lose{
  color:#aaaaaa;
}



.cover-view {
  position: absolute;
  top: calc(50% - 150rpx);
  left: calc(50% - 300rpx);
  /* opacity: .7; */
}

.flex-wrp{
  display:flex;
}

.flex-item{
  width: 200rpx;
  height: 200rpx;
  font-size: 26rpx;
}


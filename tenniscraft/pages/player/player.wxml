<!--pages/matches/matchlist.wxml-->
<view class="containerbg">
  <i-modal title="评价你的对手" visible="{{ visible }}" bind:ok="handleClose1" bind:cancel="handleClose1">
    <i-tag wx:for="{{tags}}"  wx:key="{{index}}" 
    bindchange="onChange" 
    name="{{index}}" 
    checkable="{{true}}"
     class="tags" 
     checked="{{item.checked}}" 
     color="green">{{item.name}}</i-tag>
     <div slot="footer"></div>
  </i-modal>
  <mp-navigation-bar title="选手排名" back="{{true}}" size="{{large}}"></mp-navigation-bar>
  <i-card full="{{true}}" title="" extra="本赛季总共230位选手参赛" thumb="../../icon/player.jpg">
    <view slot="content">您目前排名第{{rankPosition}}位</view>
    <view slot="footer">点击选手图标，可以对选手进行评价</view>
  </i-card>

  <view class="weui-flex">
    <view class="weui-flex__item">


    </view>
  </view>

  <view class="page__bd ">
    <view class="weui-flex">
      <view class="weui-flex__item">

        <scroll-view scroll-y style="width: 100%; height: 27.5rem;">
          <!-- <view wx:for="{{slideButtons}}"> -->
            <view wx:for="{{players}}">
            <i-card hasSlot="{{false}}" class="noneborder" full="{{true}}" title="   {{item.holderName}}" 
           indexs="{{index}}"
            bind:tapped="handleTapped"
            subtitle="第{{item.position}}名 "
            extra="段位:{{item.rankType0}}    积分:{{item.score}}  " thumb="{{item.holderAvator}}">
            </i-card>
          </view>
        </scroll-view>
      </view>
    </view>

  </view>

</view>
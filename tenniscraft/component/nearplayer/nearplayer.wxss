/* component/playitem/playitem.wxss */

.columndiv {
  display: flex;
  flex-direction: column;
  height: 220rpx;
  min-height:220rpx;
  width: 100%;
  margin-top:5%;
  justify-content: center;
  align-items: center;
  align-content: center;
}


.user {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.title{
  background-color:#dfdfdf;
  width:90%;
  color: rgb(153, 153, 153);
 }

.name{
  width:90%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
}
.info {
  width: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.divid {
  width: 90%;
  height: 2rpx;
  background-color: rgb(163, 163, 163);
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border-color: #b5babd;
  border-style: solid;
  border-width:2rpx;
  /* border-radius: 50%; */
}


.rank {
  background: #0a90dd;
  padding-left: 10rpx;
  padding-right: 10rpx;
  font-size: 24rpx;
  color: #fff;
}

.avator {
  width: 190rpx;
  height: 190rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  align-items: center;
}

.rest {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;

}

.bottomimg {
  width: 48rpx;
  height: 48rpx;
  margin: 6rpx;
}

.zone {
  width: 40%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: rgb(117, 117, 117);
}

.score {
  display: flex;
  width: 8%;
  font-size: 48rpx;
  font-weight: bolder;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.win {
  color: #333333;
}

.lose {
  color: #aaaaaa;
}



.cover-view {
  position: absolute;
  top: calc(50% - 150rpx);
  left: calc(50% - 300rpx);
  /* opacity: .7; */
}

.flex-wrp {
  display: flex;
}

.flex-item {
  width: 200rpx;
  height: 200rpx;
  font-size: 26rpx;
}

.demo-text-1 {
  background: rgba(26, 173, 25, 0.7);
}

.demo-text-2 {
  background: rgba(39, 130, 215, 0.7);
}

.demo-text-3 {
  background: rgba(255, 255, 255, 0.7);
}
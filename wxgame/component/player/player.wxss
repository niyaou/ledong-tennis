.brass{background: linear-gradient(50deg, #da7518 20%,#fafbf9 10%);}
.silver{background: linear-gradient(50deg, #41d8dd 20%,#fafbf9 10%);}
.golden{background: linear-gradient(50deg, #e6e938 20%,#fafbf9 10%);}
.diamond{ background: linear-gradient(50deg, #b738e9 20%,#fafbf9 10%);}
.user{
  width:100%;
  height:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.info{
  width:40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.divid{
  width:100%;
  height:2rpx;
  background-color: rgb(211, 211, 211);
}

.userinfo-avatar {
  width:100rpx;
height:100rpx;
border-radius: 50%;
  /* border-radius: 50%; */
}

.dividv{
  width:2rpx;
  height:60rpx;
  background-color: rgb(202, 202, 202);
}
.rank{
 background:#0a90dd;padding-left: 10rpx;padding-right: 10rpx;
 font-size: 24rpx;
 color: #fff;
}
.avator{
  width:200rpx;
height:200rpx;
display: flex;
flex-direction: column;
justify-content: center;
align-content: center;
align-items: center;
}
.rest{
  height:100%;
  width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;

}

.bottomimg{
  width: 48rpx;
  height: 48rpx;
  margin: 6rpx;
}
.zone{
  width:40%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color:rgb(117, 117, 117);
}

.score{
  display: flex;
  width:8%;
  font-size: 48rpx;
  font-weight: bolder;
  align-items: center;
  align-content: center;
  justify-content: center;
}
.win{
  color:#333333;
}
.lose{
  color:#aaaaaa;
}



.cover-view {
  position: absolute;
  top: calc(50% - 150rpx);
  left: calc(50% - 300rpx);
  /* opacity: .7; */
}

.flex-wrp{
  display:flex;
}

.flex-item{
  width: 200rpx;
  height: 200rpx;
  font-size: 26rpx;
}


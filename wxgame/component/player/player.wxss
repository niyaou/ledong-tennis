.rowdiv {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
 height:200rpx;
 margin: 30rpx;

}

.item{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 100%;
  width: 100%;

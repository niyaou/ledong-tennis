/* component/playitem/playitem.wxss */
.rowdiv {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
 height:360rpx;
 margin: 30rpx;
}

.item{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 100%;
  width: 90%;
  background-color:#fff
}

.title{
 background-color:#f3f3f3;
 width:95%;
 padding-left: 5%;
 color: rgb(153, 153, 153);
}
.user{
  width:100%;
  height:90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.divid{
  width:100%;
  height:2rpx;
  background-color: rgb(211, 211, 211);
}
.avator{
  width:40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.userinfo-avatar {
  width: 98rpx;
  height: 98rpx;
  margin: 6rpx;
  border-radius: 50%;
}

.dividv{
  width:2rpx;
  height:60rpx;
  background-color: rgb(202, 202, 202);
}
.rank{
 background:#0a90dd;padding-left: 10rpx;padding-right: 10rpx;
 font-size: 24rpx;
 color: #fff;
}

.bottom{
  height:40%;width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.bottomimg{
  width: 48rpx;
  height: 48rpx;
  margin: 6rpx;
}
.zone{
  width:45%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color:rgb(117, 117, 117);
}

.score{
  display: flex;
  width:8%;
  font-size: 48rpx;
  font-weight: bolder;
  align-items: center;
  align-content: center;
  justify-content: center;
}
.win{
  color:#333333;
}
.lose{
  color:#aaaaaa;
}

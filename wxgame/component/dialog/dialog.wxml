		<view class="pp1"><span class="{{isSelf?'hdialog':'cdialog'}}">{{content}}</span></view>
	</block>
	<block wx:else>
		<view class="pp1"><span class="{{isSelf?'hdialog':'cdialog'}}">{{content}}</span></view>
  <div>  	<image bindtap="bindViewTap" class="userinfo-avatar" src="{{avator}}" mode="cover" ></image></div>
	</block>
</view>
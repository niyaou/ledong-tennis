.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.date-selector {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.picker {
  font-size: 28rpx;
  color: #333;
}

.court-list {
  margin-top: 20rpx;
}

.court-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.court-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.court-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.court-type {
  font-size: 28rpx;
  color: #666;
}

.time-slots {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.time-slot {
  width: calc(33.33% - 14rpx);
  padding: 20rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 26rpx;
}

.time-slot.available {
  background-color: #e6f7ff;
  color: #1296db;
  border: 1rpx solid #1296db;
}

.time-slot.unavailable {
  background-color: #f5f5f5;
  color: #999;
  border: 1rpx solid #ddd;
}

.booking-summary {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.summary-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.summary-content text {
  font-size: 28rpx;
  color: #333;
}

.book-btn {
  background-color: #1296db;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}

/* 顶部信息 */
.booking-header {
  background: #fff;
  padding: 32rpx 24rpx 0 24rpx;
}
.header-row {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}
.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
}
.venue-info {
  margin-bottom: 16rpx;
}
.venue-name {
  font-size: 28rpx;
  color: #222;
  font-weight: 500;
}
.venue-desc {
  font-size: 22rpx;
  color: #aaa;
}

/* 日期横向滚动，固定顶部 */
.sticky-date {
  position: sticky;
  top: 0;
  z-index: 20;
  background: #fff;
}
.date-scroll {
  background: #fff;
  padding: 0 0 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.date-scroll-view {
  white-space: nowrap;
  width: 100%;
  height: 90rpx;
}
.date-item {
  display: inline-block;
  width: 90rpx;
  margin: 0 10rpx;
  padding: 10rpx 0;
  border-radius: 12rpx;
  background: #f7f7f7;
  text-align: center;
  color: #222;
}
.date-item.selected {
  background: #e9f56e;
  color: #8c9a00;
}
.date-item .date {
  font-size: 28rpx;
  font-weight: bold;
}
.date-item .week {
  font-size: 22rpx;
  color: #888;
}

.footer-left {
  padding-top: 4px;
  padding-bottom: 4px;
  margin-top: 0;
  margin-bottom: 0;
  line-height: 1.4;
}
.price {
  color: #f90;
  font-weight: bold;
  margin: 0 8rpx;
}
.footer-btn {
  background: #ededed;
  color: #bbb;
  font-size: 30rpx;
  border-radius: 32rpx;
  padding: 12rpx 48rpx;
  border: none;
}
.footer-btn.active {
  background: #d4e722;
color: #103f6b;
}


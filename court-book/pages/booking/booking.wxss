.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.date-selector {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.picker {
  font-size: 28rpx;
  color: #333;
}

.court-list {
  margin-top: 20rpx;
}

.court-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.court-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.court-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.court-type {
  font-size: 28rpx;
  color: #666;
}

.time-slots {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.time-slot {
  width: calc(33.33% - 14rpx);
  padding: 20rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 26rpx;
}

.time-slot.available {
  background-color: #e6f7ff;
  color: #1296db;
  border: 1rpx solid #1296db;
}

.time-slot.unavailable {
  background-color: #f5f5f5;
  color: #999;
  border: 1rpx solid #ddd;
}

.booking-summary {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.summary-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.summary-content text {
  font-size: 28rpx;
  color: #333;
}

.book-btn {
  background-color: #1296db;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}


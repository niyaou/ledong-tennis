.payment-modal-main-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
  line-height: 1.6;
}

.payment-modal-special-note {
  margin-top: 20rpx;
}

.payment-modal-note-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.payment-modal-note-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 15rpx;
}

.payment-modal-note-item:last-child {
  margin-bottom: 0;
}

.payment-modal-footer {
  padding: 20rpx 30rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.payment-modal-btn {
  width: 100%;
  background: #007bff;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding: 20rpx 0;
  line-height: 1;
}
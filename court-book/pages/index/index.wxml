<!--index.wxml-->
<view class="container">
  <view class="banner">
    <!-- 轮播图区域 -->
    <swiper indicator-dots="{{true}}" autoplay="{{true}}" interval="{{3000}}" duration="{{500}}">
      <swiper-item wx:for="{{banners}}" wx:key="id">
        <view class="banner-item">{{item.title}}</view>
      </swiper-item>
    </swiper>
  </view>

  <view class="quick-nav">
    <view class="nav-item" bindtap="navigateToBooking">
      <text>快速预约</text>
    </view>
    <view class="nav-item" bindtap="navigateToMember">
      <text>会员中心</text>
    </view>
    <button class="nav-item" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">这个获取电话</button>
  </view>

  <view class="news-section">
    <view class="section-title">最新动态</view>
    <view class="news-list">
      <view class="news-item" wx:for="{{newsList}}" wx:key="id">
        <text class="news-title">{{item.title}}</text>
        <text class="news-date">{{item.date}}</text>
      </view>
    </view>
  </view>
</view>